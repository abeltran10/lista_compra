<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="listaCompra">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.abeltran10.lista_compra.model.Producto</class>
        <class>com.abeltran10.lista_compra.model.Alimentacion</class>
        <class>com.abeltran10.lista_compra.model.Limpieza</class>
        <class>com.abeltran10.lista_compra.model.Higiene</class>
        <class>com.abeltran10.lista_compra.model.Otros</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>

            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>